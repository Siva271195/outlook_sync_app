{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Internal Users Schema",
  "type": "object",
  "required": ["event_type", "table", "primary_key"],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": ["INSERT", "UPDATE", "DELETE"]
    },
    "table": {
      "type": "string",
      "const": "users"
    },
    "primary_key": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {"type": "integer"}
      }
    },
    "before": {
      "type": "object",
      "properties": {
        "id": {"type": "integer"},
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"}
      }
    },
    "after": {
      "type": "object",
      "properties": {
        "id": {"type": "integer"},
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"}
      }
    }
  },
  "anyOf": [
    {
      "properties": {
        "event_type": {"const": "INSERT"}
      },
      "required": ["after"]
    },
    {
      "properties": {
        "event_type": {"const": "UPDATE"}
      },
      "required": ["before", "after"]
    },
    {
      "properties": {
        "event_type": {"const": "DELETE"}
      },
      "required": ["before"]
    }
  ]
}